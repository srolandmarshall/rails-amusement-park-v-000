<h1><%= @attraction.name %></h1>

<h3>Users:</h3>
<p><%= @attraction.users.count %></p>
<h3>Nausea Rating:</h3>
<p><%= @attraction.nausea_rating %></p>
<h3>Happiness Rating:</h3>
<p><%= @attraction.happiness_rating %></p>
<h3>Min. Height:</h3>
<p><%= @attraction.min_height %> inches</p>
<h3>Tickets:</h3>
<p><%= @attraction.tickets %> tickets</p>
<br>
<% if @user.admin %>
<%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
<% else %>
<%= button_to "Go on this ride", ride_path, method: :get, params: {:attraction_id => @attraction.id, :user_id => @user.id} %>
<% end %>
